<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        style="@style/TitleStyle"
        android:text="设置中心" />

   <view.SettingsItemView
       android:id="@+id/siv_update"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        custom:title="自动更新设置"
       custom:desc_on="自动更新已开启"
       custom:desc_off="自动更新已关闭"
       />
    <view.SettingsItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:title="电话归属地显示设置"
        custom:desc_on="归属地显示已经开启"
        custom:desc_off="归属地显示已经关闭"
        />
    <view.SettingsItemClickView
        android:id="@+id/sic_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <view.SettingsItemClickView
        android:id="@+id/sic_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <view.SettingsItemView
        android:id="@+id/siv_rocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:title="火箭动画"
        custom:desc_on="火箭动画已经开启"
        custom:desc_off="火箭动画已经关闭"
        />
    <view.SettingsItemView
        android:id="@+id/siv_black_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:title="黑名单拦截设置"
        custom:desc_on="黑名单拦截已开启"
        custom:desc_off="黑名单拦截已关闭"
        />


</LinearLayout>
